<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">

    <fragment
        android:id="@+id/inputFragment"
        android:name="com.eventanimation.ui.InputFragment"
        android:label="Input"
        tools:layout="@layout/fragment_input">
        <action
            android:id="@+id/action_input_to_color_display"
            app:destination="@id/colorDisplayFragment" />
        <action
            android:id="@+id/action_input_to_flash_display"
            app:destination="@id/flashDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/colorDisplayFragment"
        android:name="com.eventanimation.ui.ColorDisplayFragment"
        android:label="Color Display"
        tools:layout="@layout/fragment_color_display" />

    <fragment
        android:id="@+id/flashDisplayFragment"
        android:name="com.eventanimation.ui.SimpleFlashDisplayFragment"
        android:label="Simple Flash Display" />

</navigation>